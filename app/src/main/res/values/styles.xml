<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Toolbar title in english style -->
    <style name="ToolbarTitleEN">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/circular</item>
    </style>

    <!-- Toolbar title in persian style -->
    <style name="ToolbarTitleFA">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/vazir_bold</item>
    </style>

    <!-- Normal text with medium weight and size 18 style -->
    <style name="TextNormalMD18">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
    </style>

    <!-- Normal text with medium weight and size 16 style -->
    <style name="TextNormalMD16">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
    </style>

    <!-- Text with regular weight and size 14 style -->
    <style name="TextRG14">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/vazir_regular</item>
    </style>

    <!-- Text with medium weight and size 14 style -->
    <style name="TextMD14">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
    </style>

    <!-- Text with regular weight and size 16 style -->
    <style name="TextRG16">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/vazir_regular</item>
    </style>

    <!-- Checkbox -->
    <style name="CheckBox" parent="TextNormalMD16">
        <item name="android:button">@null</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:drawableEnd">@drawable/checkbox</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <!-- Shadow Button -->
    <style name="ShadowButton">
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="android:layout_marginStart">-1dp</item>
        <item name="android:layout_marginEnd">-1dp</item>
        <item name="android:layout_marginBottom">-13dp</item>
        <item name="android:background">@drawable/shadow</item>
    </style>

    <!-- Material Button -->
    <style name="MaterialButton" parent="TextNormalMD18">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="elevation">10dp</item>
        <item name="rippleColor">@color/rippleBlue</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>