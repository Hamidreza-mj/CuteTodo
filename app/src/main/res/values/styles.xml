<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Toolbar title in english style -->
    <style name="ToolbarTitleEN">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/circular</item>
    </style>

    <!-- Toolbar title in persian style -->
    <style name="ToolbarTitleFA">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/vazir_bold</item>
    </style>

    <!-- Normal text with medium weight and size 18 style -->
    <style name="TextNormalMD18">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
    </style>

    <!-- Normal text with medium weight and size 16 style -->
    <style name="TextNormalMD16">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
    </style>

    <!-- Text with regular weight and size 14 style -->
    <style name="TextRG14">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/vazir_regular</item>
    </style>

    <!-- Text with medium weight and size 14 style -->
    <style name="TextMD14">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
    </style>

    <!-- Text with regular weight and size 16 style -->
    <style name="TextRG16">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/vazir_regular</item>
    </style>

    <!-- CheckBox -->
    <style name="CheckBox" parent="TextNormalMD16">
        <item name="android:button">@null</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:drawableEnd">@drawable/checkbox</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="CheckBoxFilter" parent="TextRG14">
        <item name="android:button">@null</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:drawableEnd">@drawable/checkbox</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/checkbox_filter_text</item>
    </style>

    <style name="RadioButtonClickable" parent="TextRG14">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/ripple_radius</item>
        <item name="android:drawableEnd">@drawable/radiobutton</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- Shadow Button -->
    <style name="ShadowButton">
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="android:layout_marginStart">-1dp</item>
        <item name="android:layout_marginEnd">-1dp</item>
        <item name="android:layout_marginBottom">-10dp</item>
        <item name="android:background">@drawable/shadow</item>
    </style>

    <!-- MaterialButton -->
    <style name="MaterialButton" parent="TextNormalMD18">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/corners</item>
        <item name="elevation">10dp</item>
        <item name="rippleColor">@color/rippleBlue</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxBackgroundColor">@color/whiteBlue</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornersInput</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornersInput</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornersInput</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornersInput</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorTextAppearance">@style/TextRG14</item>
        <item name="hintTextAppearance">@style/TextNormalMD16</item>
        <item name="helperTextTextAppearance">@style/TextRG14</item>
        <item name="placeholderTextAppearance">@style/TextRG14</item>
        <item name="prefixTextAppearance">@style/TextRG14</item>
        <item name="suffixTextAppearance">@style/TextRG14</item>
        <item name="helperTextTextColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="placeholderTextColor">@color/blue</item>
        <item name="prefixTextColor">@color/black</item>
        <item name="suffixTextColor">@color/black</item>
    </style>

    <!-- ExposedDropdownMenu Style -->
    <style name="ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxBackgroundColor">@color/whiteBlue</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornersInput</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornersInput</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornersInput</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornersInput</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorTextAppearance">@style/TextRG14</item>
        <item name="hintTextAppearance">@style/TextNormalMD16</item>
        <item name="helperTextTextAppearance">@style/TextRG14</item>
        <item name="placeholderTextAppearance">@style/TextRG14</item>
        <item name="prefixTextAppearance">@style/TextRG14</item>
        <item name="suffixTextAppearance">@style/TextRG14</item>
        <item name="helperTextTextColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="placeholderTextColor">@color/blue</item>
        <item name="prefixTextColor">@color/black</item>
        <item name="suffixTextColor">@color/black</item>
    </style>


    <!-- TextInputEditText Style -->
    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
    </style>

    <!-- Custom Dialog Style-->
    <style name="TranslucentDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <!-- Chip -->
    <style name="Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:checkable">true</item>
        <item name="android:textAppearance">@style/TextNormalMD16</item>
        <item name="checkedIcon">@drawable/ic_tick_square</item>
        <item name="chipMinHeight">44dp</item>
        <item name="chipStartPadding">22dp</item>
        <item name="chipEndPadding">22dp</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- BottomSheet -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:colorControlHighlight">@color/HighlightBlue</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_shape</item>
    </style>

    <!-- NumberPicker -->
    <style name="NumberPicker">
        <!-- text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- line divider color -->
        <item name="colorControlNormal">#5ECCCCCC</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
    </style>

</resources>