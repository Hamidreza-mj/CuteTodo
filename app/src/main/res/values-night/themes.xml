<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.CuteTodo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/blue</item>

        <!-- StatusBar color -->
        <item name="android:statusBarColor">@color/whiteBlue</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Windows -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:colorControlHighlight">@color/HighlightBlue</item>

        <item name="android:listDivider">@color/divider</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>


        <item name="textAppearancePopupMenuHeader">@style/PopupHeaderTextAppearance</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupTextAppearance</item>
        <item name="textAppearanceSmallPopupMenu">@style/PopupTextAppearance</item>

        <item name="popupMenuBackground">@drawable/popup_shape</item>

        <!--<item name="android:layoutDirection">ltr</item>-->

    </style>
</resources>